@page "{id:int}"
@model ForeningWeb.Pages.Contacts.EditModel

<h1>Rediger Kontakt</h1>

<form method="post">
    <div>
        <label asp-for="Item.Navn"></label>
        <input asp-for="Item.Navn" class="form-control" />
        <span asp-validation-for="Item.Navn" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Item.Email"></label>
        <input asp-for="Item.Email" class="form-control" />
        <span asp-validation-for="Item.Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Item.Telefon"></label>
        <input asp-for="Item.Telefon" class="form-control" />
    </div>
    <div>
        <label asp-for="Item.Adresse"></label>
        <input asp-for="Item.Adresse" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Gem</button>
    <a asp-page="Index" class="btn btn-secondary">Tilbage</a>
</form>
