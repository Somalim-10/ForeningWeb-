@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="hero text-center text-white">
    <div class="container">
        <h1 class="display-4 fw-bold">Velkommen til ForeningWeb</h1>
        <p class="lead mb-4">En moderne platform til foreninger.</p>
        <a class="btn btn-primary btn-lg" asp-page="/Events/Index">Se vores begivenheder</a>
    </div>
</section>

<section class="intro py-5 bg-light text-center">
    <div class="container">
        <p class="lead mb-0">ForeningWeb samler aktiviteter, donationer og fællesskab ét sted.</p>
    </div>
</section>

<section class="upcoming-events py-5">
    <div class="container">
        <h2 class="text-center mb-4">Kommende begivenheder</h2>
        @if (Model.UpcomingEvents.Any())
        {
            <ul class="list-group list-group-flush">
                @foreach (var e in Model.UpcomingEvents)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div>
                            <div class="fw-bold">@e.Titel</div>
                            <div class="small text-muted">@e.Dato.ToString("dd.MM.yyyy") @e.Tidspunkt</div>
                        </div>
                        <a class="btn btn-sm btn-outline-primary" href="/Events/Details/@e.Id">Se mere</a>
                    </li>
                }
            </ul>
            <div class="text-center mt-3">
                <a class="btn btn-primary" asp-page="/Events/Index">Se alle begivenheder</a>
            </div>
        }
        else
        {
            <div class="alert alert-secondary text-center">Ingen kommende begivenheder.</div>
        }
    </div>
</section>

<section class="features py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4 text-center">
                <h3>Arrangementer</h3>
                <p>Deltag i spændende begivenheder i din forening.</p>
            </div>
            <div class="col-md-4 text-center">
                <h3>Donationer</h3>
                <p>Støt vores arbejde og gør en forskel.</p>
            </div>
            <div class="col-md-4 text-center">
                <h3>Fællesskab</h3>
                <p>Bliv en del af et engageret fællesskab.</p>
            </div>
        </div>
    </div>
</section>

