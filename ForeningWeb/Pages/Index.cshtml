@page
@model IndexModel
@{
    ViewData["Title"] = "Forside";
}

<!-- Hero sektion -->
<section class="hero text-center text-white d-flex align-items-center"
         style="background: url('/images/Mosque-sunset.jpg') center/cover no-repeat; min-height: 80vh;">
    <div class="container bg-dark bg-opacity-50 p-4 rounded">
        <h1 class="display-4 fw-bold">Velkommen til ForeningWeb</h1>
        <p class="lead mb-4">En moderne platform for det somalisk-danske fællesskab.</p>
        <a class="btn btn-primary btn-lg" asp-page="/Events/Index">Se vores begivenheder</a>
    </div>
</section>


<!-- Intro -->
<section class="intro py-5 bg-light text-center">
    <div class="container">
        <h2 class="fw-bold mb-3">Om foreningen</h2>
        <p class="lead mb-0">
            Vi samler aktiviteter, undervisning, donationer og et stærkt fællesskab i trygge rammer.
            Vores mål er at styrke det somaliske og muslimske fællesskab i Danmark – sammen.
        </p>
    </div>
</section>

<!-- Kommende begivenheder -->
<section class="upcoming-events py-5 bg-white">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">Kommende begivenheder</h2>
        @if (Model.UpcomingEvents.Any())
        {
            <div class="row g-4">
                @foreach (var e in Model.UpcomingEvents)
                {
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100">
                            <div class="card-body text-center">
                                <h5 class="card-title fw-bold">@e.Titel</h5>
                                <p class="card-text text-muted">@e.Dato.ToString("dd.MM.yyyy") @e.Tidspunkt</p>
                                <a class="btn btn-outline-success btn-sm" href="/Events/Details/@e.Id">
                                    <i class="bi bi-info-circle"></i> Se mere
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a class="btn btn-success btn-lg" asp-page="/Events/Index">Se alle begivenheder</a>
            </div>
        }
        else
        {
            <div class="alert alert-secondary text-center">Ingen kommende begivenheder.</div>
        }
    </div>
</section>

<!-- Features -->
<section class="features py-5 bg-light">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="p-4 shadow-sm bg-white rounded">
                    <i class="bi bi-people display-4 text-success mb-3"></i>
                    <h4>Fællesskab</h4>
                    <p>Bliv en del af et engageret og stærkt muslimsk fællesskab.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 shadow-sm bg-white rounded">
                    <i class="bi bi-calendar-check display-4 text-success mb-3"></i>
                    <h4>Arrangementer</h4>
                    <p>Deltag i spændende aktiviteter, fredagsbønner og undervisning.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 shadow-sm bg-white rounded">
                    <i class="bi bi-heart-fill display-4 text-success mb-3"></i>
                    <h4>Donationer</h4>
                    <p>Støt vores arbejde og vær med til at gøre en forskel.</p>
                </div>
            </div>
        </div>
    </div>
</section>
