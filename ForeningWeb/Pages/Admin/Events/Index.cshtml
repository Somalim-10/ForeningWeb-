@page
@model ForeningWeb.Pages.Admin.Events.IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin - Begivenheder";
}

<h1>Admin - Begivenheder</h1>

<p>
    <a class="btn btn-success" asp-page="/Admin/Events/Create">+ Opret ny begivenhed</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Titel</th>
            <th>Dato</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Titel</td>
                <td>@item.Dato.ToShortDateString()</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-page="/Admin/Events/Edit" asp-route-id="@item.Id">Rediger</a>
                    <a class="btn btn-sm btn-danger" asp-page="/Admin/Events/Delete" asp-route-id="@item.Id">Slet</a>
                </td>
            </tr>
        }
    </tbody>
</table>
