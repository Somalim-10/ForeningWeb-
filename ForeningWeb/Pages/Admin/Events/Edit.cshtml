@page "{id:int}"
@model ForeningWeb.Pages.Admin.Events.EditModel
@{
    ViewData["Title"] = "Admin: Rediger begivenhed";
}
<div class="container py-4">
    <h2 class="mb-3">Admin: Rediger begivenhed</h2>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form method="post">
        <input type="hidden" name="key" value="@Model.Key" />
        <input type="hidden" asp-for="Item.Id" />

        <div class="mb-3">
            <label asp-for="Item.Titel" class="form-label"></label>
            <input asp-for="Item.Titel" class="form-control" />
            <span asp-validation-for="Item.Titel" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Item.Dato" class="form-label"></label>
            <input asp-for="Item.Dato" type="date" class="form-control" />
            <span asp-validation-for="Item.Dato" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Item.Tidspunkt" class="form-label"></label>
            <input asp-for="Item.Tidspunkt" class="form-control" />
            <span asp-validation-for="Item.Tidspunkt" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Item.Beskrivelse" class="form-label"></label>
            <textarea asp-for="Item.Beskrivelse" rows="4" class="form-control"></textarea>
            <span asp-validation-for="Item.Beskrivelse" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-primary" type="submit">Gem</button>
            <a class="btn btn-outline-danger" href="/Admin/Events/Delete/@Model.Item.Id?key=@Model.Key">Slet…</a>
            <a class="btn btn-secondary" href="/Events/Details/@Model.Item.Id">Tilbage</a>
        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
 }
