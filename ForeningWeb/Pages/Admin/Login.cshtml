@page
@model ForeningWeb.Pages.Admin.LoginModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin Login";
}

<h1 class="mb-3">Admin Login</h1>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

<form method="post" class="mt-3">
    <!-- bevar evt. returnUrl så bruger lander tilbage hvor de kom fra -->
    <input type="hidden" name="returnUrl" value="@Request.Query["returnUrl"]" />

    <div class="mb-3">
        <label asp-for="Key" class="form-label">Adgangsnøgle</label>
        <input asp-for="Key" class="form-control" autocomplete="off" />
        <span asp-validation-for="Key" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Log ind</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
